@page "/students"

<PageTitle>Studenti</PageTitle>

<h3>Studenti</h3>

@if(studenti is not null)
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Jmeno</th>
                <th>Studuje</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(Student student in studenti)
            {
                <tr>
                    <td>@student.StudentId</td>
                    <td>@student.Jmeno</td>
                    <td>@student.Studuje</td>
                    <td><NavLink class="btn btn-secondary" href="@($"students/edit/{@student.StudentId}")">Edit</NavLink></td>
                </tr>
            }
        </tbody>
    </table>
}
